@model HomeSquareApp.Models.Category

@{
    ViewData["Title"] = "Delete";
    ViewData["NavData"] = "Product";
    ViewData["CurrentPage"] = "Categories";
    Layout = "_AdminLayout";
}

@if (TempData["DeleteMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
        <div id="liveToast" class="toast hide" style="background-color:#F8C4B6" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
            <div class="toast-header">
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["DeleteMessage"]
            </div>
        </div>
    </div>
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

    <form asp-action="Delete" class="border-top py-2 position-sticky bottom-0 bg-white">
        <input type="hidden" asp-for="CategoryID" />

        <div class="d-flex align-items-center">
            <a asp-action="Index" class="me-auto text-decoration-none">
                Back to Category List
            </a>
            <input type="submit" value="Delete Category" class="rounded-0 btn btn-outline-dark border-secondary" />
        </div>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".toast").toast('show');
        });
    </script>
}