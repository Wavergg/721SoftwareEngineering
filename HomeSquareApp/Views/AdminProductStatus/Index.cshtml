@model IEnumerable<HomeSquareApp.Models.ProductStatus>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductStatusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStatusName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductStatusID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductStatusID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductStatusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
