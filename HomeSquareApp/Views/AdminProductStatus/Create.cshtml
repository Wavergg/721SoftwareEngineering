@model HomeSquareApp.Models.ProductStatus

@{
    ViewData["Title"] = "Product Status";
    ViewData["NavData"] = "ProductStatus";
    Layout = "_AdminLayout";
}

<h2>Add Product Status</h2>
<hr />
<div class="pb-5">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex">
                <label asp-for="ProductStatusName" class="col-md-5"></label>
                <input asp-for="ProductStatusName" class="col-md-7 form-control" />
            </div>
            <span asp-validation-for="ProductStatusName" class="text-danger"></span>
            <div class="form-group">
                <input id="submitFormBtn" type="submit" value="Create" class="btn btn-default" hidden/>
            </div>
        </form>
    </div>
</div>

<div class="border-top pt-2">
    <div class="d-flex align-items-center col-md-5">
        <a asp-action="Index" class="me-auto text-decoration-none">
            Back to Product Status List
        </a>
        <input type="button" onclick="submitForm()" value="Create" class="rounded-0 btn btn-outline-dark border-secondary" />
    </div>
</div>


@section Scripts {
    <script>
        function submitForm() {
            document.getElementById("submitFormBtn").click();
        }
    </script>
} 