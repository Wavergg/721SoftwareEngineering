@model IEnumerable<HomeSquareApp.Models.ProductServingType>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServingType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServingType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductServingTypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductServingTypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductServingTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
