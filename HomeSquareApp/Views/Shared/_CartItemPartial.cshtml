<div class="card shadow-none rounded-0 rounded-start m-2">
    <div class="d-flex g-0">
        <button class="btn col-1 btn-danger rounded-0 rounded-start">
            X
        </button>
        <div class="d-flex flex-column">
            <div class="d-flex">
                <div class="px-3 col-3 d-flex align-items-center">
                    <img class="img-fluid" src="~/lib/images/products/butter.png" asp-append-version="true" />
                </div>
                <div class="py-3 col-9">
                    <div class="me-3">
                        <small class="fw-bold text-muted" style="font-size:0.9em">The name of the item can get quite long</small>
                        <div class="d-flex align-items-end justify-content-between my-3 my-md-0 ">

                            <div class="number-input mt-3">
                                <button class="btn btn bg-success btn-sm" style="height: 32px; border-right: 0; border-top-left-radius: 12.5rem; border-bottom-left-radius: 12.5rem" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                    <svg class="bi text-white" width="16" height="24">
                                        <use xlink:href="/lib/images/bootstrap-icons-1.4.0/bootstrap-icons.svg#dash" />
                                    </svg>
                                </button>
                                <input style="height:32px" class="quantity" min="1" name="quantity" value="1" type="number">
                                <button class="btn btn bg-success btn-sm" style="height:32px;border-left: 0; border-top-right-radius: 12.5rem; border-bottom-right-radius: 12.5rem" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                    <svg class="bi text-white" width="16" height="24">
                                        <use xlink:href="/lib/images/bootstrap-icons-1.4.0/bootstrap-icons.svg#plus" />
                                    </svg>
                                </button>
                            </div>
                            <small class="text-muted">24 00 / Ea.</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mx-3 border-top border-muted text-end">
                <span class="" style="font-family: Arial, Helvetica, sans-serif; font-size: 22px">$ 24 <small>00</small></span>
            </div>
        </div>
    </div>
</div>