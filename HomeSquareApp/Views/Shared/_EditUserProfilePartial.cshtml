@model HomeSquareApp.ViewModels.ManageUserProfileViewModel

<form enctype="multipart/form-data" asp-controller="Manage" asp-action="EditProfile" method="post" 
       data-ajax="true" data-ajax-method="post" data-ajax-success="editProfileNotification"
      data-ajax-url="/Manage/EditProfile" data-ajax-loading="#editProfileLoading" data-ajax-begin="disableEditProfileSubmit"
      autocomplete="off" class="pb-5">
    <div class="text-danger small mt-4" id="errorEditProfileSummary" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="UserID" />
    <div class="d-md-flex align-items-start">
        <label asp-for="Image" class="col-md-2 mb-2"></label>
        <div class="custom-file">
            <input id="imageProfileInput" onchange="readURL(this)" asp-for="Image" class="form-control custom-file-input" />
        </div>
    </div>

    <div class="d-flex py-4 offset-md-2 mt-3">
        <div class="card">
            @{
                string pictureUrl = Model.PictureUrl == null ? "blank-profile.png" : Model.PictureUrl;
            }
            <img id="imageProfilePicturePreview" src="~/lib/images/users/@pictureUrl" class="img-fluid" style="object-fit: cover;max-width:5rem" asp-append-version="true">
        </div>
    </div>
    <div class="d-md-flex align-items-center">
        <label asp-for="FirstName" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="FirstName" class="form-control pe-2 input-w-auto" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="FirstName"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="LastName" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="LastName" class="form-control pe-2 input-w-auto" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="LastName"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="PhoneNumber" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="PhoneNumber" class="form-control pe-2 input-w-auto" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="PhoneNumber"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="Address" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="Address" class="form-control pe-2 w-md-50" />
    </div>
    <span class="small text-danger" asp-validation-for="Address"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="Suburb" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="Suburb" class="form-control pe-2 input-w-auto" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="Suburb"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="ZipCode" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="ZipCode" class="form-control pe-2" style="width:75px" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="ZipCode"></span>
    <div class="d-md-flex align-items-center mt-3">
        <label asp-for="Unit" class="col-md-2 mb-2 mb-md-0"></label>
        <input asp-for="Unit" class="form-control pe-2" style="width:75px" />
        @*<button class="btn btn-outline-primary rounded-0 border-0"><i class="fas fa-edit"></i></button>*@
    </div>
    <span class="small text-danger" asp-validation-for="Unit"></span>

    <div>
        <button id="editProfileSubmitBtn" type="submit" class="offset-md-2 btn btn-dark rounded-0 mt-3">
            <span id="editProfileLoading" class="spinner-border spinner-border-sm" style="display:none" role="status" aria-hidden="true"></span>
            Save Changes
        </button>
    </div>
</form>