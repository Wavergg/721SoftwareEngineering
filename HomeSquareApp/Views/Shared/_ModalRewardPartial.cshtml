@model HomeSquareApp.Models.ApplicationUser

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Play Game</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body d-flex flex-column justify-content-center align-items-center" id="rewardContent">

</div>
<div id="rewardStartSection" class="position-absolute top-50 w-100" style="z-index:9999">
    @if (Model.RewardPlayChanceCount > 0)
    {
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-column w-100 align-items-center">
            <div class="text-center" style="font-size:20px">Current Ticket <b>@Model.RewardPlayChanceCount</b></div>
            <div class="d-flex gap-2 mt-4 w-50">
                <button class="btn btn-outline-dark rounded-0 w-50" data-bs-dismiss="modal">Close</button>
                <button onclick="getChoosePrizePartial()" class="w-50 btn btn-dark rounded-0">Use 1 Ticket <i class="fas fa-ticket-alt"></i></button>
            </div>
        </div>
    </div>
    }
    else
    {
        <h3 class="text-center">You Have Used All Your Available Chance</h3>
    }
</div>