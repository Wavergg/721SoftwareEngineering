@model IEnumerable<Reward>

<div class="table-responsive" style="min-height:380px">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RewardAddedDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RewardStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </th>
                <th>
                    @*Actions*@
                </th>
            </tr>
        </thead>
        <tbody id="tableData">
            <partial name="_RewardTableDataPartial" model="Model"/>
        </tbody>
    </table>
</div>
<div class="d-flex" id="pagination">
    <partial name="_PaginationPartial" />
</div>