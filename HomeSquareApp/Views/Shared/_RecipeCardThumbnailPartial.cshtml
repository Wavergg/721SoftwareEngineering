@model HomeSquareApp.Models.Recipe



@* NYD Change the Link to details page, Get Data From Modal *@

<div class="card mb-3 link-card" style="max-width: 510px;overflow:hidden">
    <a asp-controller="Recipe" asp-action="Details" asp-route-id="1">
        @* Set the max height to be the same as image Height is Important*@
        <div class="row g-0" style="max-height:240px;">
            <div class="col-4">
                <img class="img-fluid" src="~/lib/images/recipes/@Model.ImageUrl" asp-append-version="true" style="object-fit:cover;height:240px" />
            </div>
            <div class="col-8 d-flex">
                <div class="card-body align-self-stretch d-flex align-items-start flex-column">
                    @*<small class="text-secondary">Breakfast | Lunch</small>*@
                    <h3 class="cardRecipe-title mb-0 mt-2">@Model.RecipeName</h3>
                    <small>&mdash; @Model.User.FirstName</small>
                    <p class="cardRecipe-description mb-2 mt-2 mt-md-3">
                        @if (Model.RecipeDescription.Length > 130)
                        {
                            int iNextSpace = Model.RecipeDescription.LastIndexOf(" ", 130, StringComparison.Ordinal);
                            Model.RecipeDescription = string.Format("{0} . . .", Model.RecipeDescription.Substring(0, (iNextSpace > 0) ? iNextSpace : 130).Trim());
                            <span>@Model.RecipeDescription</span>
                        }
                        else
                        {
                            <span>@Model.RecipeDescription</span>
                        }
                    </p>
                    <div class="d-flex mt-auto">
                        <div class="me-auto row">
                            <small class="text-secondary fw-bold">Prep & Cooking Time</small>
                            <small class="text-muted align-items-center">
                                <svg class="bi" width="16" height="16">
                                    <use xlink:href="./lib/images/bootstrap-icons-1.4.0/bootstrap-icons.svg#clock" />
                                </svg>
                                @Model.PrepareTime
                            </small>
                        </div>
                        <div class="row text-end">
                            <small class="text-secondary fw-bold text-center">Servings</small>
                            <small class="text-muted align-items-center text-center">
                                <svg class="bi" width="16" height="16">
                                    <use xlink:href="./lib/images/bootstrap-icons-1.4.0/bootstrap-icons.svg#egg-fried" />
                                </svg>
                                @Model.Servings
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <span style="position:absolute;top:0.25rem;right:0;margin-right:1rem">
            <small class="text-muted align-items-center">
                <svg class="bi" width="16" height="16">
                    <use xlink:href="./lib/images/bootstrap-icons-1.4.0/bootstrap-icons.svg#hand-thumbs-up" />
                </svg>
                @Model.Likes
            </small>
        </span>
    </a>
</div>