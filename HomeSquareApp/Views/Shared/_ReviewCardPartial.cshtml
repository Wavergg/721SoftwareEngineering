@model HomeSquareApp.Models.Review

<div class="card w-100 shadow-none rounded-0">
    <div class="d-md-flex">
        <div class="px-md-5 px-4 py-md-0 py-4 align-items-center d-flex">
            @if (Model.User.PictureUrl != null)
            {
                <img src="~/lib/images/users/@Model.User.PictureUrl" class="rounded-circle" style="height:50px;width:50px" />
            }
            else
            {
                <img src="~/lib/images/users/blank-profile.png" class="rounded-circle" style="height:50px;width:50px" />
            }
        </div>
        <div class="d-flex flex-column bg-light flex-fill p-4">
            <div class="d-md-flex justify-content-between">
                <p class="m-0 fw-bold">@Model.User.FirstName</p>
                <small class="text-muted align-self-start" style="font-size:12px">
                    @Model.ReviewDateTime
                </small>
            </div>
            <div>
                @for (int i = 0; i < 5; i++)
                {
                    string className = "fa fa-star ";
                    if (i < Model.ReviewStars)
                    {
                        className += "checked";
                    }
                    <span class="@className" style="font-size:12px"></span>
                }
            </div>
            <div>
                @Model.ReviewContent
            </div>
        </div>
    </div>
</div>