@model ProductBannerImageViewModel


@{
    ViewData["Title"] = "EditProductBanner";
    Layout = "_AdminLayout";
}

@section pageSpecificCss{ 
    <style>
        .trailer:before {
            content: "";
            display: block;
            width: 40%;
            height: 1px;
            background: grey;
            left: 0px;
            top: 50%;
            position: absolute;
            
        }

        .trailer:after {
            content: "";
            display: block;
            width: 40%;
            height: 1px;
            background: grey;
            right: 0px;
            top: 50%;
            position: absolute;
            z-index: 0;
        }

        .bg-muted {
            background-color:#dee2e6 ;
        }
    </style>
}

<h2>Product Banner</h2>
<hr />
<div class="py-5 d-md-flex container justify-content-between align-items-stretch" style="min-height:300px;">
    <div class="col-md-5 d-flex flex-column justify-content-center">
        <button class="btn btn-dark form-control">Create New Image</button>
        <div class="container row m-0 position-relative py-2">
            <span class="trailer text-center" style="text-align:center">Or</span>
        </div>
        <button class="btn btn-dark form-control">Choose Existing Image</button>
        <input id="submitFormBtn" type="submit" value="Save" class="btn btn-default" hidden />
    </div>
    <div class="bg-muted d-none d-md-block" style="width:1px;">
    </div>
    <div class="col-md-5 d-none d-md-block">
        <h2>Create New</h2>
        <hr />
        <form>
            <div>
                <label class="mb-2" asp-for="ProductBannerImage"></label>
                <div class="custom-file">
                    <input id="Image" asp-for="ProductBannerImage" class="form-control custom-file-input" />
                </div>

                <div class="form-check mt-2">
                    <input class="form-check-input bg-success" type="checkbox" value="" id="flexCheckChecked" checked>
                    <label class="form-check-label" for="flexCheckChecked">
                        Set as Product Banner Image
                    </label>
                </div>
            </div>
        </form>
        <img class="img-fluid mt-3" src="~/lib/images/banner/bannerDeals.jpg" />
    </div>
</div>


<div class="border-top pt-2">
    <div class="d-flex align-items-center">
        <a asp-action="Index" class="me-auto text-decoration-none">
            Back to Dashboard
        </a>
        <input type="button" onclick="submitForm()" value="Save Changes" class="rounded-0 btn btn-outline-dark border-secondary" />
    </div>
</div>

@section Scripts{
    <script>
    function submitForm() {
        document.getElementById("submitFormBtn").click();
    }
    </script>
}
