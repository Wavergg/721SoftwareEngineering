@model HomeSquareApp.Models.Order

@{
    ViewData["Title"] = "Successful Purchase";
}


<div class="container py-5 center-vh d-flex align-items-center justify-content-center">
    <div class="card p-5 alert alert-light" style="min-width:75%">
        <div class="d-md-flex justify-content-between align-items-end">
            <h1 class="mb-0">Invoice</h1>
            <div class="d-flex flex-column">
                <small class="">
                    <b>Purchaser:</b> <span>@string.Format("{0} {1}", Model.User.FirstName, Model.User.LastName)</span>
                </small>
                <small >
                    <b class="">Created:</b><span>@Model.OrderDateTime.ToString("MMMM d, yyyy")</span>
                </small>
                <small>
                    <b>Type:</b> @Model.DeliveryOptions
                </small>
            </div>
        </div>
        <hr />
        <div class="mt-5">
            <partial name="_OrderSummaryPartial" model="Model.OrderDetails" />
        </div>
    </div>
</div>